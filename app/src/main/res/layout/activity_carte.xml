<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#a9d3dc"
tools:context=".CarteAct">

<android.support.v7.widget.CardView
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_marginTop="50dp"
    android:layout_gravity="center"
    app:cardCornerRadius="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entrez num de carte"
            android:id="@+id/t1"

            android:textColor="#a9d3dc"
            android:padding="20dp"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:textColor="#a9d3dc"
            android:id="@+id/button"

            android:background="#fcfcfb"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView android:text="Si vous n'avez pas une carte en vous adressant a l'acceuil magasin" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:textSize="15dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>