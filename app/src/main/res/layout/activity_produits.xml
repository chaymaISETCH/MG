<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sameh.mymg.Produits">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="500dp"
    android:layout_height="495dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
<HorizontalScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:id="@+id/all"
            android:layout_margin="5dp"
            android:background="@color/default_bmb_shareLine1Color"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High-Tech"
            android:id="@+id/ht"
            android:background="@color/default_bmb_shareLine1Color"
            android:layout_margin="5dp"
            android:shadowColor="@color/bleu"
            android:layout_toRightOf="@+id/all"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meubles"
            android:id="@+id/me"
            android:background="@color/default_bmb_shareLine1Color"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/ht"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cosmétiques"
            android:id="@+id/cos"
            android:background="@color/default_bmb_shareLine1Color"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/me"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electroménager"
            android:id="@+id/em"
            android:background="@color/default_bmb_shareLine1Color"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cos"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentation"
            android:id="@+id/alim"
            android:background="@color/default_bmb_shareLine1Color"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/em"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="produits de nettoyage"
            android:id="@+id/net"
            android:background="@color/default_bmb_shareLine1Color"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/alim"

            />

    </LinearLayout>
</HorizontalScrollView>

    </RelativeLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:clickable="true"
        />

</FrameLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
